			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="76" y="-110">leave!</label>
			<nail x="102" y="-85"/>
		</transition>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id1"/>
